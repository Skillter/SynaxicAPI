# Synaxic API Environment Variables
# Copy this file to .env and fill in your actual values
# do NOT commit the .env file to Git

# --- Google OAuth2 ---
GOOGLE_CLIENT_ID=your-google-client-id-goes-here
GOOGLE_CLIENT_SECRET=your-google-client-secret-goes-here

# --- Production Database (used by Docker Compose) ---
POSTGRES_USER=synaxic
POSTGRES_PASSWORD=generate-a-strong-password-here
POSTGRES_DB=synaxic

# --- Production Redis (used by Docker Compose) ---
# For a single server setup
REDIS_URL=redis://redis:6379

# --- Application Configuration (for production deployment) ---
SPRING_DATASOURCE_URL=jdbc:postgresql://postgres:5432/synaxic
SPRING_DATASOURCE_USERNAME=${POSTGRES_USER}
SPRING_DATASOURCE_PASSWORD=${POSTGRES_PASSWORD}
SPRING_DATA_REDIS_URL=${REDIS_URL}

# --- Grafana Credentials ---
GRAFANA_ADMIN_PASSWORD=generate-a-strong-password-here